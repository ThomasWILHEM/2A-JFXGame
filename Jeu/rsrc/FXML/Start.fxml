<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:controller="vues.Start" stylesheets="@CSS/Game.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label styleClass="nomJeu" text="Steal It If You Can" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
      <TextField fx:id="name" promptText="Entrez un nom" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="200.0" right="200.0" />
         </GridPane.margin>
      </TextField>
      <Button styleClass="restartButton" fx:id="playButton" onAction="#onPlay" mnemonicParsing="false" text="Jouer" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
      <Button styleClass="quitButton" fx:id="quitButton" onAction="#onQuit" mnemonicParsing="false" text="Quitter" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
   </children>
</GridPane>
